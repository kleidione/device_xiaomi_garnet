<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- the padding on the start of the statusbar -->
    <dimen name="status_bar_padding_start">20.0px</dimen>

    <!-- the padding on the end of the statusbar -->
    <dimen name="status_bar_padding_end">0.0px</dimen>

    <!-- The width/height of the unlock icon view on keyguard. -->
    <dimen name="keyguard_indication_margin_bottom">40.0px</dimen>

    <!-- Margin on the left side of the carrier text on Keyguard -->
    <dimen name="keyguard_carrier_text_margin">28.0px</dimen>

    <!-- Height of the status bar header bar when on Keyguard (match status_bar_height) -->
    <dimen name="status_bar_header_height_keyguard">@*android:dimen/status_bar_height</dimen>

    <!-- Location on the screen of the center of the physical power button. This is a reasonable
    default that should be overridden by device-specific overlays. -->
    <dimen name="physical_power_button_center_screen_location_y">1220.0px</dimen>

    <!-- Microns/ums (1000 um = 1mm) per pixel for the given device. If unspecified, UI that
         relies on this value will not be sized correctly. -->
    <item name="pixel_pitch" type="dimen">56.96</item>
</resources>
